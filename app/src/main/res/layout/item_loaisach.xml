<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@drawable/background_itemtv"
    android:orientation="horizontal">
        <ImageView
            android:id="@+id/ImgLoaiSach"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:contentDescription="@null"
            android:src="@drawable/baseline_book_24" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvTenLS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:text="Tên Loại Sách"/>

        <TextView
            android:id="@+id/tvMaLS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã sách"
            android:textSize="14dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnEditLS"
                android:layout_width="130dp"
                android:text="Sửa Thông Tin"
                android:textAlignment="center"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnDeleteLS"
                android:layout_width="match_parent"
                android:text="Xóa Loại Sách"
                android:layout_marginLeft="5dp"
                android:textAlignment="center"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>